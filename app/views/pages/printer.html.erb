<% provide(:title, "Instagram Printer") %>

<body class="printer-body">

<div class="printerpage-hero-section" id="arrow-scroll">
    <%= render 'layouts/nav' %>
    <a href="https://www.facebook.com/socialplaygroundindonesia/?fref=ts&ref=br_tf" target="_blank"><p class="facebook-social"></p></a>
    <!--<a href="https://twitter.com/socialplaygrnd" target="_blank"><p class="twitter-social"></p></a>-->
    <a href="https://www.instagram.com/socialplayground_id/" target="_blank"><p class="instagram-social"></p></a>
    <h3 class="printer-hero-quote">LIVE INSTAGRAM PRINTER</h3>
    <h5 class="printer-hero-text">SNAP. TAG. PRINT.</h5>
</div>

<div class="how-to-play-section">
    <span class="how-to-play-quote">How to play</span>
</div>

<div class="stp-icon-section round-shadow">
    <div class="icon">
        <p class="sprite printer-snap-sprite"></p>
        <span class="stp-icon-header">Snap</span>
        <span class="stp-icon-text"><%= raw t('take_photo_to_instagram') %></span>
    </div>
    <div class="icon">
        <p class="sprite printer-tag-sprite"></p>
        <span class="stp-icon-header">Tag</span>
        <span class="stp-icon-text"><%= raw t('add_hash_tag') %></span>
    </div>
    <div class="icon">
        <p class="sprite printer-print-sprite"></p>
        <span class="stp-icon-header">Print</span>
        <span class="stp-icon-text"><%= raw t('collect_photo') %></span>
    </div>
</div>

<div class="stp-icon-section-small round-shadow">
    <div class="snap-icon-section">
        <%= image_tag('printer/snap-icon.png') %>
        <span class="stp-icon-header">Snap</span>
        <span class="stp-icon-text-printer"><%= t('take_photo_to_instagram') %></span>
    </div>
    
    <div class="tag-icon-section">
        <%= image_tag('printer/tag-icon.png') %>
        <span class="stp-icon-header">Tag</span>
        <span class="stp-icon-text"><%= t('add_hash_tag') %></span>
    </div>
    
    <div class="print-icon-section">
        <%= image_tag('printer/print-icon.png') %>
        <span class="stp-icon-header">Print</span>
        <span class="stp-icon-text"><%= t('collect_photo') %></span>
    </div>
</div>


<div class="video-container">
  <iframe width="853" height="480" src="https://player.vimeo.com/video/157413601" frameborder="0" allowfullscreen></iframe>
</div>

<div class="about-printer-section">
    <div class="printer-facts">
        <p class="printer-facts-heading"><%= t('spread_content') %></p>
        <p class="printer-facts-body"><%= t('inspire_attendees') %></p>
        
        <p class="printer-facts-heading"><%= t('drive_hash_tag') %></p>
        <p class="printer-facts-body"><%= t('incentivize_consumers') %></p>
        
        <p class="printer-facts-heading"><%= t('engage_via_offers') %></p>
        <p class="printer-facts-body"><%= t('integrate_hash_tag') %></p>
        
        <p class="printer-facts-heading"><%= t('post_content') %></p>
        <p class="printer-facts-body"><%= t('well_provide_photo') %></p>
    </div>
</div>



<div class="printer-img-highlight-section">
    <h2 class="printer-highlight-heading">The Printer</h2>
    <ul class="printer-image-ul">
        <div class="image-row-1">
            <li><%= image_tag ("printer/instagram-printer01.jpg") %></li>
            <li><%= image_tag ("printer/instagram-printer02.jpg") %></li>
            <li><%= image_tag ("printer/instagram-printer03.jpg") %></li>
        </div>
        <div class="image-row-2">
            <li><%= image_tag ("printer/instagram-printer04.jpg") %></li>
            <li><%= image_tag ("printer/instagram-printer05.jpg") %></li>
            <li><%= image_tag ("printer/instagram-printer06.jpg") %></li>
        </div>
    </ul>
</div>

<div class="printer-live-feed-strip">
    <ul class="live-feed-strip">
        <li class="img1"><%= image_tag("printer/feed01.jpg") %></li>
        <li class="img2"><%= image_tag("printer/feed02.jpg") %></li>
        <li class="img3"><%= image_tag("printer/feed03.jpg") %></li>
        <li class="img4"><%= image_tag("printer/feed04.jpg") %></li>
        <li class="img5"><%= image_tag("printer/feed05.jpg") %></li>
    </ul>
</div>

<div class="printer-live-feed-strip-small">
    <ul class="live-feed-strip">
        <li class="img1"><%= image_tag("printer/feed01.jpg") %></li>
        <li class="img2"><%= image_tag("printer/feed02.jpg") %></li>
        <li class="img3"><%= image_tag("printer/feed04.jpg") %></li>
    </ul>
</div>

