<% provide(:title, "Instagram Printer") %>

<body class="printer-body">

<div class="printerpage-hero-section" id="arrow-scroll">
    <%= render 'layouts/nav' %>
    <a href="https://www.facebook.com/socialplaygroundindonesia/?fref=ts&ref=br_tf" target="_blank"><p class="facebook-social"></p></a>
    <!--<a href="https://twitter.com/socialplaygrnd" target="_blank"><p class="twitter-social"></p></a>-->
